<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideDetailActivity">

    <!-- Toolbar with Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/silver"
        android:title="Guide Details"
        android:titleTextColor="@android:color/white"
        android:elevation="4dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="16dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/rounded_corner"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/imageViewProfilePic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/emptypic"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"
                android:background="@drawable/circle_bg" />

            <!-- Guide Name -->
            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guide Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:textColor="@color/primaryColor"/>

            <!-- Guide Role -->
            <TextView
                android:id="@+id/textViewRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Role: Certified Guide"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Bio -->
            <TextView
                android:id="@+id/textViewBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guide Bio"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Services Offered -->
            <TextView
                android:id="@+id/textViewServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Services: Hiking, Museums, etc."
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- Price Per Day -->
            <TextView
                android:id="@+id/textViewPricePerDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price per Day: $100"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/primaryColor"/>

            <!-- Booked Dates -->
            <TextView
                android:id="@+id/textViewBookedDates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booked Dates"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/holo_red_dark" />

            <!-- View Full Profile Button -->
            <Button
                android:id="@+id/buttonViewProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Full Profile"
                android:backgroundTint="@color/primaryColor"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                android:elevation="2dp"
            />

            <!-- Contact Guide Button -->
            <Button
                android:id="@+id/buttonContactGuide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Guide"
                android:backgroundTint="@color/primaryColor"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                android:elevation="2dp"
                />

            <!-- Booking Button -->
            <Button
                android:id="@+id/buttonRequestBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request Booking"
                android:backgroundTint="@color/primaryColor"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp"
                android:elevation="2dp"
                 />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
